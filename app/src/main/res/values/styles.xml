<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
    </style>


    <style name="MainTextBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DeviderStyle">
        <item name="android:background">@color/Divider_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AdditionalWeatherInfo" parent="MainTextBar">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

   <style name="AdditionalWeatherInfoIcon">
       <item name="android:layout_width">20dp</item>
       <item name="android:layout_height">20dp</item>
   </style>

    <style name="MainTextViewStyle" parent="MainTextBar">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>



</resources>
